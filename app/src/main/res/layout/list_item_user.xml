<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_item_user_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/list_item_padding"
    android:paddingLeft="@dimen/list_item_padding"
    android:paddingTop="@dimen/material_text_margin"
    android:paddingBottom="@dimen/material_text_margin"
    android:background="@color/white"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item_user_thumb"
        android:layout_width="@dimen/thumb_large_size"
        android:layout_height="@dimen/thumb_large_size"
        android:scaleType="fitXY"
        android:layout_marginRight="@dimen/thumb_margin"
        android:layout_centerVertical="true"
        fresco:roundAsCircle="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_user_screen_name"
            android:textSize="@dimen/text_article_title_size"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_user_name"
            android:textSize="@dimen/text_x_large_size"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
